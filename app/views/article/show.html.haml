%h1 XueTang_CloudComputing

%div#br
  - @categories.each do |category|
    %div#notice=link_to category.name, category_path(category)
  %table#article_table
    %tbody
      %tr#firstline
        %td= @article.title
        %td= "author: #{@article.author}"
        %td= "create date: #{@article.created_at}"
        %td= "category: #{@article.category.name}"
      %br
      %tr#content
        %td{:colspan => '4'}= @article.content
  %div#back= link_to "back", category_path(@article.category)

