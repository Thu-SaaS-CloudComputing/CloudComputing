%h1 XueTang_CloudComputing

%div#br
  - @top_category.each do |category|
    %div#notice=link_to "#{category.name} (#{category.id} -> #{category.parent})", category_path(category)
  %table#subcategory_table
    %tbody
      %tr#firstline
        - @sub_category.each do |subcategory|
          %td= link_to "#{subcategory.name}", category_path(subcategory)  if subcategory
  %table#article_table
    %tbody
      %tr#firstline
        %td Title
        %td Author
        %td id
      - @articles.each do |article|
        %tr.articles
          %td= link_to "#{article.title}", article_path(article)
          %td= article.author
          %td= article.id

